<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sultanofcardio.resumebuildersultanofcardio.pec.sultanofcardio.resumebuildersultanofcardio.activities.ResumeDetailActivity">
    <android.support.v4.widget.NestedScrollView
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <ImageView
                android:background="@android:color/darker_gray"
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:alpha="0.8"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/about_you"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="24sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:gravity="center"
                        android:text="About You"/>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name_label"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            android:text="Name:"/>
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            tools:text="John Doe"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/number_label"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            android:text="Number:"/>
                        <TextView
                            android:id="@+id/number"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            tools:text="(876) 123-4567"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/email_label"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            android:text="Email:"/>
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#2196f3"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            tools:text="someone@example.com"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/website_label"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            android:text="Website:"/>
                        <TextView
                            android:id="@+id/website"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#2196f3"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            tools:text="http://example.com/"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/address_label"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            android:text="Address:"/>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            tools:text="One Tree Hill"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/summary_label"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            android:text="Summary:"/>
                        <TextView
                            android:id="@+id/summary"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_gravity="bottom"
                            tools:text="I am a programmer"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="24sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:gravity="center"
                        android:text="Experience"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="16dp"
                        android:id="@+id/experience_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/experience_detail_item"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="24sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:gravity="center"
                        android:text="Education"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="16dp"
                        android:id="@+id/education_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/education_detail_item"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="24sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:gravity="center"
                        android:text="Skills"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="16dp"
                        android:id="@+id/skills_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/skill_detail_item"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/referenceList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="24sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:gravity="center"
                        android:text="References"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="16dp"
                        android:id="@+id/references_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/reference_detail_item"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/create"
        android:foreground="?android:selectableItemBackground"
        android:layout_gravity="bottom|end"/>
</android.support.design.widget.CoordinatorLayout>
